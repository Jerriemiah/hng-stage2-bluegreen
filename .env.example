# ===============================================
# üåê Environment Configuration Example
# Copy this file to ".env" before running the app
# ===============================================

# Docker image names for both environments
BLUE_IMAGE=yimikaade/wonderful:devops-stage-two
GREEN_IMAGE=yimikaade/wonderful:devops-stage-two

# The internal port the Node.js app runs on
PORT=3000

# The currently active pool
ACTIVE_POOL=blue

# Release versions for identification
RELEASE_ID_BLUE=v1-blue
RELEASE_ID_GREEN=v1-green

# Nginx container port mapping
NGINX_PORT=8080

# Blue/Green app ports
BLUE_PORT=8081
GREEN_PORT=8082

SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXXX/YYYY/ZZZZ
ERROR_RATE_THRESHOLD=2
WINDOW_SIZE=200
ALERT_COOLDOWN_SEC=300
ACTIVE_POOL=blue
